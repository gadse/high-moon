			"type": "linear",
			"flow": [
				[
					"Ah, you're back. Any luck so far?"
				],
				[
					"Maybe. I wanted to ask you something else."
				],
				[
					"Yeah? Well then, spit it out."
				]
			],
			"goto": "menu"
		},
